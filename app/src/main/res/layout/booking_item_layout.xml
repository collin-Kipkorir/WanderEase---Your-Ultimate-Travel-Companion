<!-- booking_item_layout.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Hotel Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/hotelImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/hotelNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotelCostTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Cost"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotelRatingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:maxLines="1"
                    android:textColor="@color/yellow"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.wanderease.travelcompanion.StarRatingView
                    android:id="@+id/hotelRatingView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    app:numStars="5"
                    app:starSize="15dp"
                    app:starSpacing="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/daysTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Days"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/nightsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nights"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/checkInDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check-in Date"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

